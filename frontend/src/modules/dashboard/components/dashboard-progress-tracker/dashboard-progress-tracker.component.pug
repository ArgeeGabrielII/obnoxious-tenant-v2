sbpro-card(
    [headerActions]='true'
)
    .card-header Progress Tracker
        sbpro-dropdown(
            placement='bottom-end',
            animation='animated--fade-in-up',
            [classes]='["no-caret"]'
        )
            .dropdown-trigger
                i-feather.text-gray-500(name='more-vertical')
            .dropdown-items
                a.dropdown-item(href='javascript:void(0);')
                    .dropdown-item-icon
                        i-feather.text-gray-500(name='list')
                    | Manage Tasks
                a.dropdown-item(href='javascript:void(0);')
                    .dropdown-item-icon
                        i-feather.text-gray-500(name='plus-circle')
                    | Add New Task
                a.dropdown-item(href='javascript:void(0);')
                    .dropdown-item-icon
                        i-feather.text-gray-500(name='minus-circle')
                    | Delete Tasks

    .card-body
        h4.small
            | Server Migration 
            span.float-end.fw-bold 20%
        .progress.mb-4
            .progress-bar.bg-danger(role='progressbar', style='width: 20%', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100')
        h4.small
            | Sales Tracking 
            span.float-end.fw-bold 40%
        .progress.mb-4
            .progress-bar.bg-warning(role='progressbar', style='width: 40%', aria-valuenow='40', aria-valuemin='0', aria-valuemax='100')
        h4.small
            | Customer Database 
            span.float-end.fw-bold 60%
        .progress.mb-4
            .progress-bar(role='progressbar', style='width: 60%', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100')
        h4.small
            | Payout Details 
            span.float-end.fw-bold 80%
        .progress.mb-4
            .progress-bar.bg-info(role='progressbar', style='width: 80%', aria-valuenow='80', aria-valuemin='0', aria-valuemax='100')
        h4.small
            | Account Setup 
            span.float-end.fw-bold Complete!
        .progress
            .progress-bar.bg-success(role='progressbar', style='width: 100%', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100')
    a.card-footer(href='javascript:void(0);')
        .d-flex.align-items-center.justify-content-between.small.text-body
            | Visit Task Center
            i-feather(name='arrow-right')