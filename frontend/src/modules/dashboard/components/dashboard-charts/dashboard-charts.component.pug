                    .dropdown-items
                        a.dropdown-item((click)='changeBarChartRange("monthly")') Monthly
                        a.dropdown-item((click)='changeBarChartRange("quarterly")') Quarterly
                        a.dropdown-item((click)='changeBarChartRange("yearly")') Yearly
            .card-body
