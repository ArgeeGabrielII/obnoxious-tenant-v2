sbpro-dashboard-head-compact(
    title='Account Settings - Profile',
    icon='user'
)

// Main page content
.container-xl.px-4.mt-4
    // Account page navigation
    nav.nav.nav-borders
        a.nav-link.active.ms-0(routerLink='/dashboard/account/profile') Profile
        a.nav-link(routerLink='/dashboard/account/billing') Billing
        a.nav-link(routerLink='/dashboard/account/security') Security
        a.nav-link(routerLink='/dashboard/account/notifications') Notifications
    hr.mt-0.mb-4
    .row.gx-4
        .col-xl-4
            // Profile picture card
            .card
                .card-header Profile Picture
                .card-body.text-center
                    // Profile picture image
                    img.img-account-profile.rounded-circle.mb-2(src='assets/img/illustrations/profiles/profile-1.png', alt='')
                    // Profile picture help block
                    .small.font-italic.text-muted.mb-4 JPG or PNG no larger than 5 MB
                    // Profile picture upload button
                    button.btn.btn-primary(type='button') Upload new image
        .col-xl-8
            // Account details card
            .card.mb-4
                .card-header Account Details
                .card-body
                    form
                        // Form Group (username)
                        .mb-3
                            label.small.mb-1(for='inputUsername') Username (how your name will appear to other users on the site)
                            input#inputUsername.form-control(type='text', placeholder='Enter your username', value='username')
                        // Form Row
                        .row
                            // Form Group (first name)
                            .mb-3.col-md-6
                                label.small.mb-1(for='inputFirstName') First name
                                input#inputFirstName.form-control(type='text', placeholder='Enter your first name', value='Valerie')
                            // Form Group (last name)
                            .mb-3.col-md-6
                                label.small.mb-1(for='inputLastName') Last name
                                input#inputLastName.form-control(type='text', placeholder='Enter your last name', value='Luna')
                        // Form Row        
                        .row
                            // Form Group (organization name)
                            .mb-3.col-md-6
                                label.small.mb-1(for='inputOrgName') Organization name
                                input#inputOrgName.form-control(type='text', placeholder='Enter your organization name', value='Start Bootstrap')
                            // Form Group (location)
                            .mb-3.col-md-6
                                label.small.mb-1(for='inputLocation') Location
                                input#inputLocation.form-control(type='text', placeholder='Enter your location', value='San Francisco, CA')
                        // Form Group (email address)
                        .mb-3
                            label.small.mb-1(for='inputEmailAddress') Email address
                            input#inputEmailAddress.form-control(type='email', placeholder='Enter your email address', value='name@example.com')
                        // Form Row
                        .row
                            // Form Group (phone number)
                            .mb-3.col-md-6
                                label.small.mb-1(for='inputPhone') Phone number
                                input#inputPhone.form-control(type='tel', placeholder='Enter your phone number', value='555-123-4567')
                            // Form Group (birthday)
                            .mb-3.col-md-6
                                label.small.mb-1(for='inputBirthday') Birthday
                                input#inputBirthday.form-control(type='text', name='birthday', placeholder='Enter your birthday', value='06/10/1988')
                        // Save changes button
                        button.btn.btn-primary(type='button') Save changes