ng-container(*ngIf='!rtl')
    nav.topnav.navbar.navbar-expand.shadow.justify-content-between.justify-content-sm-start.navbar-light.bg-white

        button#sidebarToggle.btn.btn-icon.btn-transparent-dark.order-1.order-lg-0.me-2.ms-lg-2.me-lg-0(
            data-cy='topNavToggleSideNav',
            (click)='toggleSideNav()'
        )
            i-feather(name='menu')

        a.navbar-brand.pe-3.ps-4.ps-lg-2(routerLink='/dashboard')
            | SB Admin Pro

        sbpro-top-nav-search

        ul.navbar-nav.align-items-center.ms-auto.me-lg-4
            sbpro-top-nav-docs
            sbpro-top-nav-alerts
            sbpro-top-nav-messages
            sbpro-top-nav-user

ng-container(*ngIf='rtl')
    nav.pe-3.pe-lg-0.ps-3.topnav.navbar.navbar-expand.shadow.navbar-light.bg-white
        ul.navbar-nav.align-items-center.me-auto
            sbpro-top-nav-user(placement='bottom-start')
            sbpro-top-nav-messages(placement='bottom-start')
            sbpro-top-nav-alerts(placement='bottom-start')
            sbpro-top-nav-docs(placement='bottom-start')
        
        sbpro-top-nav-search.ms-auto.d-none.d-lg-block

        button#sidebarToggle.btn.btn-icon.btn-transparent-dark.order-1.order-lg-0.ms-lg-2.ms-2(
            data-cy='topNavToggleSideNav',
            (click)='toggleSideNav()'
        )
            i-feather(name='menu')

        a.navbar-brand.text-end.d-none.d-sm-block(routerLink='/dashboard')
            | SB Admin Pro        
