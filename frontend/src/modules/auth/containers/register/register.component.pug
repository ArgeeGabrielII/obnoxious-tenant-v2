sb-layout-auth
    .container-xl.px-4
        .row.gx-4.justify-content-center
            .col-lg-7
                .card.shadow-lg.border-0.rounded-lg.mt-5
                    .card-header.justify-content-center
                        h3.fw-light.my-4 Create Profile Account
                    .card-body
                        form([formGroup]='registerForm', (ngSubmit)='onSubmit()')
                            .row
                                .col-md-6
                                    .mb-3
                                        label.small.mb-1(for='inputfirst_name') First Name
                                        input#inputfirst_name.form-control(
                                            data-cy='first_nameInput',
                                            type='text',
                                            placeholder='Enter first name',
                                            formControlName='first_name',
                                            [class.is-valid]='first_nameControlValid',
                                            [class.is-invalid]='first_nameControlInvalid'
                                        )
                                        .valid-feedback Looks good!
                                        .invalid-feedback(*ngIf='first_nameControl.hasError("required")')
                                            | First name required.

                                .col-md-6
                                    .mb-3
                                        label.small.mb-1(for='inputlast_name') Last Name
                                        input#inputlast_name.form-control(
                                            data-cy='last_nameInput',
                                            type='text',
                                            placeholder='Enter last name',
                                            formControlName='last_name',
                                            [class.is-valid]='last_nameControlValid',
                                            [class.is-invalid]='last_nameControlInvalid'
                                        )
                                        .valid-feedback Looks good!
                                        .invalid-feedback(*ngIf='last_nameControl.hasError("required")')
                                            | Last name required.

                            .row
                                .col-md-6
                                    .mb-3
                                        label.small.mb-1(for='inputemail_address_address') Email Address
                                        input#inputemail_address_address.form-control(
                                            data-cy='email_addressInput',
                                            type='email_address',
                                            placeholder='Enter email address',
                                            aria-describedby='email_addressHelp',
                                            formControlName='email_address',
                                            [class.is-valid]='email_addressControlValid',
                                            [class.is-invalid]='email_addressControlInvalid'
                                        )
                                        .valid-feedback Looks good!
                                        .invalid-feedback(*ngIf='email_addressControl.hasError("required")')
                                            | Email Address required.
                                        .invalid-feedback(*ngIf='email_addressControl.hasError("email_address")')
                                            | Email Address is not valid.

                                .col-md-6
                                    .mb-3
                                        label.small.mb-1(for='inputUsername') Username
                                        input#inputUsername.form-control(
                                            data-cy='usernameInput',
                                            type='username',
                                            placeholder='Enter username',
                                            aria-describedby='usernameHelp',
                                            formControlName='username',
                                            [class.is-valid]='usernameControlValid',
                                            [class.is-invalid]='usernameControlInvalid'
                                        )
                                        .valid-feedback Looks good!
                                        .invalid-feedback(*ngIf='email_addressControl.hasError("required")')
                                            | Username required.


                            .row
                                .col-md-6
                                    .mb-3
                                        label.small.mb-1(for='inputPassword') Password
                                        input#inputPassword.form-control(
                                            data-cy='passwordInput',
                                            type='password',
                                            placeholder='Enter password',
                                            formControlName='password',
                                            [class.is-valid]='passwordControlValid',
                                            [class.is-invalid]='passwordControlInvalid'
                                        )
                                        .valid-feedback Looks good!
                                        .invalid-feedback(*ngIf='passwordControl.hasError("required")')
                                            | Password required.
                                        .invalid-feedback(*ngIf='passwordControl.hasError("minlength")')
                                            | Password must be at least 12 characters.

                                .col-md-6
                                    .mb-3
                                        label.small.mb-1(for='inputConfirmPassword') Confirm Password
                                        input#inputConfirmPassword.form-control(
                                            data-cy='confirmPasswordInput',
                                            type='password',
                                            placeholder='Confirm password',
                                            formControlName='confirmPassword',
                                            [class.is-valid]='confirmPasswordControlValid',
                                            [class.is-invalid]='confirmPasswordControlInvalid'
                                        )
                                        .valid-feedback Looks good!
                                        .invalid-feedback(*ngIf='confirmPasswordControl.hasError("required")')
                                            | Confirm Password required.
                                        .invalid-feedback(*ngIf='registerForm.hasError("passwordMismatch")')
                                            | Passwords do not match.

                            .d-grid
                                button.btn.btn-primary(
                                    data-cy='registerButton',
                                    type='submit',
                                    [disabled]='registerForm.invalid'
                                ) Create Profile Account

                    .card-footer.text-center
                        .small
                            a(routerLink='/auth/login') Have an account? Go to login

ng-template(#confirmationModal, let-modal)
    .modal-header
        h5.modal-title Create Profile Account Form Data
        button.btn-close(
            type='button',
            aria-label='Close',
            (click)='modal.dismiss("Cross click")'
        )
            span(aria-hidden='true') Ã—
    .modal-body.
        Profile Account Successfully Created!
    .modal-footer
        button.btn.btn-primary(
            type='button',
            (click)='modal.close("LOGIN")'
        ) Login
